<div class="row">
  <div class="col-sm-4">
    <h1>Edit Categories</h1>
    <form action="/admin/categories/edit/{{category.id}}?_method=PUT" method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input value="{{category.name}}"type="text" name="name" placeholder="Enter title" class="form-control">
        <br>
        <button type="submit" name="button"class="btn btn-primary">Update Category</button>
      </div>
    </form>
  </div>
</div>
